<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.proyectokaraoke.ReservarMesaActivity"
    tools:showIn="@layout/activity_reservar_mesa">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI:"
        android:id="@+id/textView1"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:lines="1"
        android:id="@+id/editText1"
        android:layout_weight="1"
        android:background="@drawable/edittextstyle"
        android:textSize="25dp"
        android:text="10308414"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:text="Nombres:"
        android:id="@+id/textView2"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:lines="1"
        android:id="@+id/editText2"
        android:layout_weight="1"
        android:background="@drawable/edittextstyle"
        android:textSize="25dp"
        android:text="Richard Antonio"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:text="Apellidos:"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:lines="1"
        android:id="@+id/editText3"
        android:layout_weight="1"
        android:background="@drawable/edittextstyle"
        android:textSize="25dp"
        android:text="Zegarra Sánchez"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:text="Teléfono:"
        android:id="@+id/textView4"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:lines="1"
        android:id="@+id/editText4"
        android:layout_weight="1"
        android:background="@drawable/edittextstyle"
        android:textSize="25dp"
        android:text="940123072"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:id="@+id/button"
        android:layout_gravity="right|center"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"
        />


</LinearLayout>
